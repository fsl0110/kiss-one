---
import Divider from "../components/Divider.astro";
import One from "../components/One.astro";
import ScrollTop from "../components/ScrollTop.astro";
import Quote from "../components/Quote.astro";
import Header from "../components/Header.astro";
import TOC from "../components/TOC.astro";
import Thoughts from "../components/Thoughts.astro";
import { data } from "../data";

const { OneWorld, OneBudget, OneCurrency, OneMindset } = data;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>KISS One World</title>
    <meta name="description" content="Everyone Everywhere Alltogether" />
  </head>
  <body>
    <main>
      <Header />
      <One />
      <TOC />
      <Quote
        text="„We can't solve problems by using the same kind of thinking we used when we created them.”"
        author="Albert Einstein"
      />
      <div class="content">
        <Divider icon="*** DRAFT ***" size="80px" />
        <Divider icon="#" size="80px" />
        <Thoughts data={OneWorld.arms} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneWorld.leftLeg} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneWorld.rightLeg} />
        <Divider icon="+" size="80px" />
        <Thoughts data={OneBudget.arms} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneBudget.leftLeg} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneBudget.rightLeg} />
        <Divider icon="+" size="80px" />
        <Thoughts data={OneCurrency.arms} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneCurrency.leftLeg} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneCurrency.rightLeg} />
        <Divider icon="=" size="80px" />
        <Thoughts data={OneMindset.arms} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneMindset.leftLeg} />
        <Divider icon="&" size="40px" />
        <Thoughts data={OneMindset.rightLeg} />
      </div>
    </main>
    <ScrollTop />
  </body>
  <style>
    .content {
      text-align: center;
      border-top: 1px solid black;
      padding-top: 80px;
    }
  </style>
  <style is:global>
    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      font-family: helvetica, sans-serif;
      padding: 20px;
    }
  </style>
</html>
