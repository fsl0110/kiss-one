---
import Tooltip from "./Tooltip.astro";

interface Props {
  name: string;
  thought: string;
  desc?: string;
}

const { name, thought, desc } = Astro.props;
---

<div class="thought">
  <div class="name">{name}</div>
  {desc ? <Tooltip content={desc}>{thought}</Tooltip> : <span>{thought}</span>}
</div>
<style>
  .name {
    font-weight: 100;
    padding-bottom: 6px;
  }

  .thought {
    margin-bottom: 18px;
  }
</style>
