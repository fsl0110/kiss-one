---
import { slugify } from "../scripts/slugify";
import Tooltip from "./Tooltip.astro";

interface Props {
  name: string;
  thought: string;
  description?: string;
}

const { name, thought, description } = Astro.props;
---

<div class="thought">
  <div class="name">{name}</div>
  {
    description ? (
      <Tooltip content={description}>
        <a href={`#${slugify(thought)}`} title={description}>
          {thought}
        </a>
      </Tooltip>
    ) : (
      !description && <a href={`#${slugify(thought)}`}>{thought}</a>
    )
  }
</div>
<style>
  a {
    font-size: 18px;
    text-underline-offset: 4px;
  }

  .name {
    font-weight: 100;
    padding-bottom: 4px;
  }

  .thought {
    margin-bottom: 18px;
  }
</style>
