---
import Blueprint from "../components/Blueprint.astro";
import Divider from "../components/Divider.astro";
import { oneThoughts } from "../data/one";

const { OneWorld, OneBudget, OneCurrency, OneMindset } = oneThoughts;
---

<div id="one-mindset">
  <Blueprint
    name={OneWorld.name}
    arms={OneWorld.arms}
    leftLeg={OneWorld.leftLeg}
    rightLeg={OneWorld.rightLeg}
    heart={OneWorld.heart}
    circle={OneWorld.circle}
    layer={OneWorld.layer}
  />
  <Divider icon="+" />
  <Blueprint
    name={OneBudget.name}
    arms={OneBudget.arms}
    leftLeg={OneBudget.leftLeg}
    rightLeg={OneBudget.rightLeg}
    heart={OneBudget.heart}
    circle={OneBudget.circle}
    layer={OneBudget.layer}
  />
  <Divider icon="+" />
  <Blueprint
    name={OneCurrency.name}
    arms={OneCurrency.arms}
    leftLeg={OneCurrency.leftLeg}
    rightLeg={OneCurrency.rightLeg}
    heart={OneCurrency.heart}
    circle={OneCurrency.circle}
    layer={OneCurrency.layer}
  />
  <Divider icon="=" />
  <Blueprint
    name={OneMindset.name}
    arms={OneMindset.arms}
    leftLeg={OneMindset.leftLeg}
    rightLeg={OneMindset.rightLeg}
    heart={OneMindset.heart}
    circle={OneMindset.circle}
    layer={OneMindset.layer}
  />
</div>
<style>
  div {
    display: flex;
    justify-content: center;
    padding: 30px 0;
    max-width: 1150px;
  }

  @media screen and (max-width: 1150px) {
    div {
      flex-direction: column;
    }
  }
</style>
